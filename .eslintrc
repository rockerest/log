{
    "env": {
        "browser": true
    },
    "rules": {
        "strict": [ 1, "function" ],
        "no-console": 2,
        "brace-style": [ 2, "stroustrup", { "allowSingleLine": true } ],
        "padded-blocks": [ 2, "never" ],
        "no-multiple-empty-lines": [ 1, {
            "max": 1
        } ],
        "key-spacing": [ 2, {
            "beforeColon": false,
            "afterColon": true
        } ],
        "radix": 2,
        "vars-on-top": 2,
        "indent": [ 2, 4, { "indentSwitchCase": true } ],
        "comma-style": [ 2, "last" ],
        "consistent-this": [ 1, "self" ],
        "no-nested-ternary": 2,
        "quotes": [ 2, "double", "avoid-escape" ],
        "space-before-function-parentheses": [ 2, "never" ],
        "space-before-blocks": [ 2, "never" ],
        "space-after-keywords": [ 2, "never" ],
        "space-in-brackets": [ 2, "always" ],
        "space-in-parens": [ 2, "always" ],
        "space-infix-ops": 2
    },
    "globals": {
        "define": false,
        "module": false,
        "console": false,
        "requirejs": false,
        "require": false,
        "noty": false
    }
}
