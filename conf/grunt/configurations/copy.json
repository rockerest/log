{
    "i18n": {
        "files": [
            {
                "expand": true,
                "cwd": "src/js/nls/",
                "src": ["**"],
                "dest": "build/js/nls/"
            }
        ]
    },
    "images": {
        "files": [
            {
                "expand": true,
                "cwd":  "src/images/",
                "src": ["**"],
                "dest": "build/img/"
            }
        ]
    },
    "vendor": {
        "files": [
            {
                "src": "./node_modules/requirejs/require.js",
                "dest": "./build/vendor/requirejs/require.min.js"
            },
            {
                "expand": true,
                "cwd": "node_modules/font-awesome/fonts/",
                "src": ["**"],
                "dest": "build/vendor/font-awesome/"
            }
        ]
    },
    "hosted": {
        "files": [
            {
                "expand": true,
                "cwd": "src/content/files",
                "src": ["**/*", ".eslintrc"],
                "dest": "build/files/"
            }
        ]
    },
    "data": {
        "files": [
            {
                "expand": true,
                "cwd": "src/content/data",
                "src": ["**/*.json"],
                "dest": "build/data/"
            }
        ]
    }
}
